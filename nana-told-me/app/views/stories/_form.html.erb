<%= render "layouts/errors", :object => @story %>

<%= form_for @story do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title, :class => "form-control" %>
  <%= f.label :details %>
  <%= f.text_field :details, :class => "form-control" %>
  <%= f.label :location %>
  <%= f.text_field :location, :class => "form-control" %>
  <%= f.label :date %>
  <%= f.date_field :date, :class => "form-control" %>
  <%= f.label :contributor %>
  <%= f.text_field :contributor, :class => "form-control" %>
  <%= f.label :image, 'Photo' %>
  <%= f.file_field :image %>

  <%= f.submit :class => "btn btn-default" %>
<% end %>
